<%= notice %>
<h1>つぶやき一覧</h1>
<table>
  <tr>
    <th>内容</th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.content %></td>
    <td><%= link_to '詳細を確認する', tweet_path(tweet.id) %></td>
    <td><%= link_to "ブログを編集する", edit_tweet_path(tweet.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくブログを投稿する', new_tweet_path %>
