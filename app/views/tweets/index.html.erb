<%= notice %>
<h1>つぶやき一覧</h1>
<table>
  <tr>
    <th>内容</th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.content %></td>
    <td><%= link_to '詳細確認', tweet_path(tweet.id), class: "btn btn-default" %></td>
    <td><%= link_to "編集する", edit_tweet_path(tweet.id), class: "btn btn-info" %></td>
    <td><%= link_to '削除する', tweet_path(tweet.id), method: :delete, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>
<%= link_to '新規投稿', new_tweet_path, class: "btn btn-default" %>
